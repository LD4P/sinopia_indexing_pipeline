{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "indent": "off", // off for prettier
    "linebreak-style": ["error", "unix"],
    "quotes": "off", // off for prettier
    "semi": ["error", "never"],
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
